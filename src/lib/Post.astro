---
const { slug, title, description, cover_img, img_alt, date_pub, date_updated } = Astro.props;
---

<article class="mb-4 max-w-sm rounded-sm bg-slate-200 p-2 shadow-sm lg:mx-0">
	<a href={process.env.VERCEL ? `${Astro.site}blog/${slug}` : `${Astro.url.pathname}blog/${slug}`}>
		<img
			src={cover_img}
			alt={img_alt}
			loading="lazy"
			width="500"
			height="200"
			class="mx-auto my-4 h-auto w-full rounded-sm shadow-sm"
		/>
		<h1
			class="w-max border-b-2 border-zinc-800 text-4xl font-bold transition hover:border-blue-500 hover:text-blue-500"
		>
			{title}
		</h1>
	</a>
	<time class="text-zinc-700" datetime={date_pub.toISOString()}
		>{
			new Date(date_pub).toLocaleDateString("en-US", {
				year: "numeric",
				month: "short",
				day: "numeric",
			})
		}</time
	>
	<!-- { date_updated ? <time class="text-zinc-700" datetime={date_updated}>{new Date(date_updated).toLocaleDateString("en-US", {
		year: "numeric",
  	month: "long",
  	day: "numeric",
	})}</time> : null } -->
	<p class="mt-2 text-zinc-800">{description}</p>
</article>
