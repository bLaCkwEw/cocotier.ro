---
import Nav from "@lib/Nav.astro";
import Footer from "@lib/Footer.astro";

const { title, description } = Astro.props;
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />

		<title>{title ? title + " - cocotier.ro" : "" + "cocotier.ro"}</title>
		<meta name="description" content={description} />
		<script is:inline>
			if (
				localStorage.theme === "dark" ||
				(!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches)
			) {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
			}
		</script>
	</head>
	<body
		class="mx-2 max-w-2xl bg-slate-50 text-zinc-900 dark:bg-zinc-900 dark:text-slate-50 md:mx-auto"
	>
		<Nav />		
		<slot />
		<Footer />
	</body>
</html>
